{
  "name": "ertib-backend",
  "version": "1.0.0",
  "description": "Backend for Ertib Delivery (Node.js + Express + MongoDB)",
  "main": "server.js",
  "scripts": {
    "dev": "cross-env ENV_FILE=.env.development nodemon server.js",
    "start": "cross-env ENV_FILE=.env.production node server.js",
    "migrate:dev": "dotenv -e .env.development -- npx prisma migrate dev",
    "migrate:deploy": "dotenv -e .env.production -- npx prisma migrate deploy",
    "studio:dev": "dotenv -e .env.development -- npx prisma studio",
    "studio:prod": "dotenv -e .env.production -- npx prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "axios": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.7",
    "morgan": "^1.10.1",
    "mysql2": "^3.15.3"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "dotenv-cli": "^11.0.0",
    "nodemon": "^2.0.22",
    "prisma": "^6.19.0"
  }
}
